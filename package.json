{
  "name": "hardhat-project",
  "scripts": {
    "build": "npm run clean && npm run compile",
    "clean": "npx hardhat clean",
    "size": "npx hardhat size-contracts",
    "compile": "npx hardhat compile",
    "format": "npx prettier --write .",
    "test": "npx hardhat test --network localhost",
    "coverage": "npx hardhat coverage --solcoverjs ./.solcover.js",
    "flatten": "npx hardhat flatten",
    "check:format": "solhint contracts/*.sol --fix",
    "deploy:token:local": "npx hardhat run scripts/deploy-token.ts --network localhost",
    "deploy:token-vesting:local": "npx hardhat run scripts/deploy-token-vesting.ts --network localhost",
    "deploy:lp-token-timelock:local": "npx hardhat run scripts/deploy-lp-token-lock.ts --network localhost"
  },
  "files": [
    "build/abi",
    "contracts"
  ],
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.4",
    "@nomiclabs/hardhat-etherscan": "^2.1.8",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@typechain/ethers-v5": "^7.2.0",
    "@typechain/hardhat": "^2.3.1",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^12.20.41",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "chai": "^4.3.4",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-promise": "^5.2.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.5.3",
    "hardhat": "^2.8.2",
    "hardhat-gas-reporter": "^1.0.7",
    "prettier": "^2.5.1",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "solhint": "^3.3.6",
    "solidity-coverage": "^0.7.17",
    "ts-node": "^10.4.0",
    "typechain": "^5.2.0",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.4.2",
    "hardhat-abi-exporter": "^2.8.0",
    "hardhat-contract-sizer": "^2.4.0"
  }
}
